<%= form_for @artist do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control-sm', placeholder: 'name', required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :albums, class: 'form-control-sm', placeholder: 'albums' %>
  </div>
  <div class="form-group">
    <%= f.text_field :hometown, class: 'form-control-sm', placeholder: 'hometown' %>
  </div>
  <div class="form-group">
    <%= f.text_field :img, class: 'form-control-sm', placeholder: 'image' %>
  </div>
  <%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>